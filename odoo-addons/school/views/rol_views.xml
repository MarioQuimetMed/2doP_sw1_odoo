<odoo>
    <!-- Vista de lista (tree) para el modelo school.rol -->
    <record id="view_tree_roles" model="ir.ui.view">
        <field name="name">Roles Tree</field>
        <field name="model">school.rol</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="descripcion" />
            </tree>
        </field>
    </record>

    <!-- Vista de formulario (form) para el modelo school.rol -->
    <record id="view_form_roles" model="ir.ui.view">
        <field name="name">Roles Form</field>
        <field name="model">school.rol</field>
        <field name="arch" type="xml">
            <form create="false">
                <group>
                    <field name="descripcion" />
                </group>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir las vistas del modelo school.rol -->
    <record id="action_roles" model="ir.actions.act_window">
        <field name="name">Roles</field>
        <field name="res_model">school.rol</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_tree_roles" />
    </record>
</odoo>