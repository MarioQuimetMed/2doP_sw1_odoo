<odoo>
    <!-- AcciÃ³n para abrir las vistas del modelo school.paralelo -->
    <record id="action_paralelos" model="ir.actions.act_window">
        <field name="name">Paralelos</field>
        <field name="res_model">school.paralelo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista de lista (tree) para el modelo school.paralelo -->
    <record id="view_tree_paralelos" model="ir.ui.view">
        <field name="name">Paralelos Tree</field>
        <field name="model">school.paralelo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="letra" />
            </tree>
        </field>
    </record>

    <!-- Vista de formulario (form) para el modelo school.paralelo -->
    <record id="view_form_paralelos" model="ir.ui.view">
        <field name="name">Paralelos Form</field>
        <field name="model">school.paralelo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="letra" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>