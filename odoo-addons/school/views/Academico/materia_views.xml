<odoo>
    <!-- AcciÃ³n para abrir las vistas del modelo school.materia -->
    <record id="action_materias" model="ir.actions.act_window">
        <field name="name">Materias</field>
        <field name="res_model">school.materia</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista de lista (tree) para el modelo school.materia -->
    <record id="view_tree_materias" model="ir.ui.view">
        <field name="name">Materias Tree</field>
        <field name="model">school.materia</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- Vista de formulario (form) para el modelo school.materia -->
    <record id="view_form_materias" model="ir.ui.view">
        <field name="name">Materias Form</field>
        <field name="model">school.materia</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>